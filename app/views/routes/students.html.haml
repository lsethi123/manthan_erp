.row{:ng_controller => "RouteController"}
  .col-sm-6
    %h4 Students Belongs to this Route
    %table.table.table-bordered
      %thead
        %tr
          %th Student id
          %th Student Name
          %th Class
          
      %tbody
        %tr{"ng-repeat" => "student in students"}
          %td {{student.id}}
          %td {{student.name}}
          %td {{student.klass}}
          
= link_to "Show All", "#", :class => "btn btn-primary" , :ng_click => "allStudents(#{@route.id})"
