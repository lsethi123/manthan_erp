= form_for Interviewscheduler.new do |f|
  .row
    .field
      .col-sm-3
        = f.label "Name:", :class => 'control-label'
      .col-sm-7
        = f.text_field :name, :class => 'form-control'
        %br
  .row   
    .field
      .col-sm-3
        = f.label "Description:", :class => 'control-label'
      .col-sm-7
        = f.text_area :description, :class => 'form-control'
        %br
  .row
    .field
      .col-sm-3
        = f.label "Start day:", :class => 'control-label'
      .col-sm-7
        = f.text_field :start_time, :class => 'datepicker form-control'
        %br
  .row
    .field
      .col-sm-3
        = f.label "Start Time:", :class => 'control-label'
      .col-sm-7
        = f.time_select :end_time, :class => 'form-control'
        
        
