.row
  .col-sm-9
    %button.btn.btn-primary{"data-target" => "#myModal","data-toggle" => "modal"}= "Add New"
    #myModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
      .modal-dialog
        .modal-content
          .modal-header
            %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times;
            %h4#myModalLabel.modal-title New book
            = form_for Book.new , :html => { :class => "form-horizontal", :role => "form"} do |f|
              = render "shared/error_messages", :object => f.object
              .modal-body
                .row
                  .col-sm-2
                    = f.label "Name:", :class => 'col-sm-3 control-label'
                  .col-sm-2
                    = f.label "ISDN:", :class => 'col-sm-3 control-label'
                  .col-sm-2
                    = f.label "Author:", :class => 'col-sm-3 control-label'
                  .col-sm-2
                    = f.label"YOP:",:class => 'col-sm-3 control-label'
                  .col-sm-2
                    = f.label "NOC:", :class => 'col-sm-3 control-label'
                  .col-sm-2
                    = f.label "DP:", :class => 'col-sm-3 control-label'
                .row
                  .col-sm-2
                    = f.text_field :name, :class => 'col-sm-3 form-control'
                  .col-sm-2
                    = f.text_field :isdn, :class => 'col-sm-3 form-control'
                  .col-sm-2
                    = f.text_field :author, :class => 'col-sm-3 form-control'
                  .col-sm-2
                    = f.text_field :year, :class => 'col-sm-3 datepicker form-control'
                  .col-sm-2
                    = f.text_field :noc, :class => 'col-sm-3 form-control'
                  .col-sm-2
                    = f.text_field :dp, :class => 'col-sm-3 datepicker form-control'
                    %br
                    
                      
                 
                  
                 
                  .modal-footer
                    %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close
                    = button_tag "Save", :type => "submit", :class => 'btn btn-primary'
                    %br
%br
%table.table.table-striped.table-condensed.table-bordered{style: "width:70%"}
  %thead
    %tr
      %th Name
      %th ISDN Number
      %th Author
      %th Year Of Publishing
      %th No Of Copies
      %th Date Purchased
      %th
  %tbody
    - @books.each do |book|
      %tr
        %td= book.name
        %td= book.isdn
        %td= book.author
        %td= book.year
        %td= book.noc
        %td= book.dp
        %td
          = link_to raw("<span class='glyphicon glyphicon-edit'></span>"), edit_book_path(book), :class => "btn btn-warning btn-sm", :title => "Edit"
          = link_to raw("<span class='glyphicon glyphicon-trash'></span>"), book_path(book), :class => "btn btn-danger btn-sm", :data => {:method => 'delete' , :confirm => "Are You Sure to Delete ?"}, :title => "Delete"
       
