.row
  .container10
    .process
      .process-row
        .process-step
          - if("#{@staffrecruit.status}" == "Application_Created")
            = link_to raw("<span class= 'fa fa-user fa2-2x'></span>"), enquiry_show_staffrecruit_path, :class => "btn btn-success1 btn-circle"
            %br
            %span.label.label-success Application Form
            
          - else
            = link_to raw("<span class= 'fa fa-user fa1-2x'></span>"),enquiry_show_staffrecruit_path , :class => "btn btn-success1 btn-circle"
            %br
            %span.label.label-success Application Form
        .glyphicon.glyphicon-chevron-right
        .process-step
          - if("#{@staffrecruit.status}" == "Document_Verified")
            = link_to raw("<span class= 'fa fa-file-text-o fa2-2x'></span>"), document_verification_staffrecruit_path, :class => "btn btn-success1 btn-circle"
            %br
            %span.label.label-success Document Verification
            
          - elsif("#{@staffrecruit.status}" == "Document_Verified" || "#{@staffrecruit.status}" == "Assessment_Planned" || "#{@staffrecruit.status}" == "Assessment_Completed" || "#{@staffrecruit.status}" == "Management_Reviewed" ||  "#{@staffrecruit.status}" == "Selected" )
            = link_to raw("<span class= 'fa fa-file-text-o fa1-2x'></span>"), document_verification_staffrecruit_path(@staffrecruit), :class => "btn btn-success1 btn-circle"
            %br
            %span.label.label-success Document Verification
            
          - elsif("#{@staffrecruit.status}" == "Application_Created")
            = link_to raw("<span class= 'fa fa-file-text-o fa2-2x'></span>"), upload_document_staffrecruit_path(@staffrecruit), :class => "btn btn-danger1 btn-circle"
            %br
            %span.label.label-default Document Verification
        .glyphicon.glyphicon-chevron-right
        .process-step
          - if("#{@staffrecruit.status}" == "Assessment_Planned" || "#{@staffrecruit.status}" == "Assessment_Completed" || "#{@staffrecruit.status}" == "Management_Reviewed" ||  "#{@staffrecruit.status}" == "Selected" )
            = link_to raw("<span class= 'fa fa-calendar fa2-2x'></span>"),view_assessment_staffrecruit_path, :class => "btn btn-success1 btn-circle"
            %br
            %span.label.label-success Assessment Planned
          - elsif("#{@staffrecruit.status}" == "Document_Verified") and current_user.admin?
            = link_to raw("<span class= 'fa fa-calendar fa2-2x'></span>"), "#", :onclick => "createStaffAssessment('#{@staffrecruit.staff_admission_id}');", :class => 'btn1 btn btn-danger1 btn-circle'
            %br
            %span.label.label-warning Assessment Planned
          - elsif current_user.teacher? or current_user.principal? or current_user.admin?
            = link_to raw("<span class= 'fa fa-calendar fa1-2x'></span>"), '#', :class => "btn btn-warning1 btn-circle"
            %br
            %span.label.label-default Assessment Planned
        .glyphicon.glyphicon-chevron-right
        .process-step
          - if("#{@staffrecruit.status}" == "Assessment_Completed"|| "#{@staffrecruit.status}" == "Management_Reviewed" ||  "#{@staffrecruit.status}" == "Selected")
            = link_to raw("<span class= 'fa fa-tasks fa2-2x'></span>"), assessment_result_staffrecruit_path, :class => "btn btn-success1 btn-circle"
            %br
            %span.label.label-success Assessment Completed
          - elsif current_user.teacher?
            = link_to raw("<span class= 'fa fa-tasks fa2-2x'></span>"), "#", :class => 'btn1 btn btn-danger1 btn-circle'
            %br
            %span.label.label-warning Assessment Completed
                
          - elsif current_user.admin? or current_user.principal?
            = link_to raw("<span class= 'fa fa-tasks fa2-2x'></span>"), '#', :class => "btn btn-warning1 btn-circle"

            %br
            %span.label.label-default Assessment Completed
          
        .glyphicon.glyphicon-chevron-right      
        .process-step
          - if("#{@staffrecruit.status}" == "Management_Reviewed" ||  "#{@staffrecruit.status}" == "Selected")
            = link_to raw("<span class= 'fa fa-users fa2-2x'></span>"), management_result_staffrecruit_path, :class => "btn btn-success1 btn-circle"
            %br
            %span.label.label-success Management Review
          - elsif("#{@staffrecruit.status}" == "Assessment_Completed") and current_user.principal?
            = link_to raw("<span class= 'fa fa-users fa2-2x'></span>"), "#", :class => 'btn1 btn btn-danger1 btn-circle'
            %br
            %span.label.label-warning Management Review
            
          - elsif current_user.admin? or current_user.teacher? or current_user.principal?
            = link_to raw("<span class= 'fa fa-users fa2-2x'></span>"), '#', :class => "btn btn-warning1 btn-circle"

            %br
            %span.label.label-default Management Reviewed
        
        .glyphicon.glyphicon-chevron-right      
        .process-step
          - if("#{@staffrecruit.status}" == "Selected")
            = link_to raw("<span class= 'fa fa-thumbs-up fa2-2x'></span>"), staffrecruits_path, :class => "btn btn-success1 btn-circle"
            %br
            %span.label.label-default Recruitment
          - elsif("#{@staffrecruit.status}" == "Management_Reviewed") and current_user.admin?
            = link_to raw("<span class= 'fa fa-thumbs-up fa2-2x'></span>"), "#", :class => 'btn1 btn btn-danger1 btn-circle',"data-target" => ".bs-example-modal-sm", "data-toggle" => "modal"
            %br
            %span.label.label-warning Recruitment
          - elsif
            = link_to raw("<span class= 'fa fa-thumbs-up fa2-2x'></span>"), "#", :class => 'btn1 btn btn-warning1 btn-circle'
              
            %br
            %span.label.label-default Recruitment
