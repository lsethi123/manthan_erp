.row
  .container10
    .process
      .process-row
        .process-step
          - if("#{@admission.status}" == "Enquiry_Created")
            %button.btn.btn-warning.btn-circle{:disabled => "disabled", :type => "button"}
              %i.fa.fa-comments-o.fa-2x
            %br
            %span.label.label-default Enquiry Form
          - else
            %button.btn.btn-success.btn-circle{:disabled => "disabled", :type => "button"}
              %i.fa.fa-comments-o.fa-2x
            %br
            %span.label.label-default Enquiry Form
