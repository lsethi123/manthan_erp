.row{"ng-controller" => "TeachingPlansController"}
  .form-group.col-md-3
    %label{:class=> "form-label col-md-4"} Grade
    .col-md-6      
      %select{"ng-model" => "myGrade", :ng_options => "grade.id as grade.grade for grade in map_grades", :class => "form-control"}  
        
  .form-group.col-md-3
    %label{:class=> "form-label col-md-4"} Section
    .col-md-6
      %select{"ng-model" => "mySection", :ng_options => "section.id as section.section for section in map_sections | filter: {grade_master_id: myGrade}", :class=>"form-control"}
  .form-group.col-md-5
    = link_to "Show Plan", "#", :class => "btn btn-primary"
    .col-md-4
      %button.btn.btn-primary{"data-target" => "#myModal","data-toggle" => "modal"}= "View Plan"
      = render "form"
  .row
    .col-md-4   
      #accordion.panel-group                     
        .panel.panel-default
          .panel-heading
            %h4.panel-title
              %a{"data-parent" => "#accordion", "data-toggle" => "collapse", :href => "#collapseTwo"}
                TeachingPlans
                #collapseTwo.panel-collapse.collapse
                  .panel-body
                    - @teaching_plans.sort.each do |month, teaching_plans|
                      %h2= month.strftime('%B')
                      - for teaching_plan in teaching_plans
                        .teaching_plan
                          %strong= teaching_plan.teaching_date
                          plan on #{teaching_plan.plan_month}      
                   
    .col-sm-5
      .teachingplancaledar
        #calendar1
                                                
