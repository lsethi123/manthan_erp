.row{"ng-controller" => "TeachingPlansController"}
  .form-group.col-md-3
    %label{:class=> "form-label col-md-4"} Grade
    .col-md-6
      
      %select{"ng-model" => "myGrade", :ng_options => "grade.id as grade.grade for grade in map_grades", :class => "form-control"} 
        
  .form-group.col-md-3
    %label{:class=> "form-label col-md-4"} Section
    .col-md-6
      %select{"ng-model" => "mySection", :ng_options => "section.id as section.section for section in map_sections | filter: {id: myGrade}", :class=>"form-control"}
  .form-group.col-md-5
    .col-md-4
      %button.btn.btn-primary{"data-target" => "#myModal","data-toggle" => "modal"}= "Add Plan"
#myModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times;
        %h4#myModalLabel.modal-title Teaching Plan
        = form_for TeachingPlan.new do |f|
          .modal-body
            .row
              .col-sm-6
                = f.label "Date", :class => 'col-sm-3 control-label'
                .col-sm-10
                  = f.text_field :teaching_date ,:class => 'datepicker form-control'
              .col-sm-6
                = f.label "Plan", :class => 'col-sm-3 control-label'              
                .col-sm-10
                  = f.text_field :plan_month ,:class => 'form-control'
                  %br
                  
          .modal-footer
            .col-md-5.col-md-offset-3
              %button{:type => "button", :class=> "btn btn-primary", :ng_click => "addMoreterms()"}=  "More plans"           
              = button_tag "Save", :type => "submit", :class => 'btn btn-primary'

