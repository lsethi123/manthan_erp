.row{"ng-controller" => "TeachersTimeTablesController"}
  .row
    .col-md-2 
    .col-md-8
      .col-md-6 
        .col-md-12
          = label_tag(:grade, "Select Teacher") 
        .form-group.col-md-12
          %select{"ng-model" => "myTeacher", "ng-options" => "faculty.id as faculty.name for faculty  in faculty_names | orderBy:'name'",:class => "form-control",:required => "required"}       
            %option{style: "display:none", value: ""} Select Teacher
          {{myTeacher}}
      .col-md-6
        .col-md-12
          = submit_tag("SHOW TIME TABLE",{class: "btn btn-primary", :ng_click => "showTimeTable()"})         
    .col-md-2
  .row
    .col-md-1
    .col-md-8
      %div{"ng-show" => "myValue"}
        %table{:class => "table"}
          %tr
            %th PERIOD
            %th MON
            %th TUE
            %th WED
            %th THU
            %th FRI
            %th SAT 
            %th 
          %tr{"ng-repeat" => "timeperiod in timeperiods | orderBy:timeperiod['id']"}
            %td Period{{" "+($index+1)}}
            %td               
              %select{ "ng-hide" => "mySelectedValue","ng-model" => "timeperiod['mon_grade_section']", "ng-options" => "subject.id as  subject.subject for subject in subjects",:class => "form-control",:placeholder => "first name"} 
                %option{value: ""}
            %td
              %select{"ng-model" => "timeperiod['tue_grade_section']", "ng-options" => "subject.id as  subject.subject for subject in subjects",:class => "form-control"} 
                %option{value: ""}
            %td
              %select{"ng-model" => "timeperiod['wed_sub_grade_section']", "ng-options" => "subject.id as subject.subject for subject in subjects",:class => "form-control"}  
                %option{value: ""}
            %td
              %select{"ng-model" => "timeperiod['thu_grade_section']", "ng-options" => "subject.id as subject.subject for subject in subjects",:class => "form-control"}  
                %option{value: ""}
            %td 
              %select{"ng-model" => "timeperiod['fri_grade_sectionb']", "ng-options" => "subject.id as subject.subject for subject in subjects",:class => "form-control"}
                %option{value: ""}
            %td 
              %select{"ng-model" => "timeperiod['sat_grade_section']", "ng-options" => "subject.id as subject.subject for subject in subjects",:class => "form-control"}  
                %option{value: ""}
            %td
              %input{:type => "button", "ng-click" => "clearPeriods($index)", :class => "btn btn-danger btn-sm", :value => "CLEAR" }             
    .col-md-2 
      
