.row
  .col-sm-8
    %table.table-striped.table-condensed
      %tr
        %td{style: "width:25%"}
          %b
            %span.label.label-warning Enquiry #
        %td{style: "width:25%"}
          = @admission.form_no
        %td{style: "width:25%"}
          %b
            %span.label.label-warning Admission #
        %td{style: "width:25%"}
          = @admission.admission_no
      
      %tr
        %td
          %label{for: "name"} Name
        %td
          = @admission.name
        %td
          %label{for: "klass"} Class
        %td
          = @admission.grade
      %tr
        %td
          %label{for: "dob"} DOB
        %td
          = @admission.dob
        %td
          %label{for: "gender"} Gender
        %td
          = @admission.gender
  
      %tr
        %td
          %label{for: "father_name"} Father's Name
        %td
          = @admission.father_name
        %td
          %label{for: "mother_name"} Mother's Name
        %td
          = @admission.mother_name
        
      %tr
        %td
          %label{for: "father_mobile"} Father's Mobile
        %td
          = @admission.father_mobile
        %td
          %label{for: "mother_mobile"} Mother's Mobile
        %td
          = @admission.mother_mobile

      %tr
        %td
          %label{for: "father_email"} Father's Email
        %td
          = @admission.father_email
        %td
          %label{for: "mother_email"} Mother's Email
        %td
          = @admission.mother_email
          
  .col-sm-3
    
    - if("#{@admission.status}" == 'Enquiry_Created'||"#{@admission.status}" == 'Application_Created'||"#{@admission.status}" == 'Assessment_Planned'||"#{@admission.status}" == 'Assessment_Completed'||"#{@admission.status}" == 'Management_Reviewed' )
      = link_to "Close the Form", "#", :class => "change btn btn-danger",:data=> {:id => "#{@admission.id}"}
    - else 
      = link_to "Form Closed", "#", :class => "btn btn-success",:data=> {:id => "#{@admission.id}"}
    %br
    %br

    = link_to "View Enquiry", enquiry_show_admission_path , :class => 'btn btn-primary'
    %br
    %br
    - if("#{@admission.status}" == 'Enquiry_Created' )
      = link_to "Create Application", admission_new_admission_path , :class => 'btn btn-success'
      %br
      %br
    - if("#{@admission.status}" == 'Application_Created')
      = link_to "View Application", admission_show_admission_path , :class => 'btn btn-primary'
      %br
      %br
      
      = link_to "Create Assessment", "#", :onclick => "createAssessment('#{@admission.teacher_leader_id}');", :class => 'btn btn-primary'
     
                        
      %br
      %br   
      
    - if("#{@admission.status}" == 'Assessment_Planned' )
      = link_to "View Application", admission_show_admission_path , :class => 'btn btn-primary'
      %br
      %br
      = link_to "View Assessment", view_assessment_admission_path ,:class => 'btn btn-primary'    
      %br
      %br
    
    - if("#{@admission.status}" == 'Assessment_Completed' )
      = link_to "View Application", admission_show_admission_path , :class => 'btn btn-primary'
      %br
      %br
      = link_to "View Assessment", view_assessment_admission_path ,:class => 'btn btn-primary'    
      %br
      %br
      = link_to "Assessment Result", assessment_result_admission_path ,:class => 'btn btn-primary'    
      %br
      %br
     
    - if("#{@admission.status}" == 'Management_Reviewed' )
      = link_to "View Application", admission_show_admission_path , :class => 'btn btn-primary'
      %br
      %br
      = link_to "View Assessment", view_assessment_admission_path ,:class => 'btn btn-primary'    
      %br
      %br
      = link_to "Assessment Result", assessment_result_admission_path ,:class => 'btn btn-primary'    
      %br
      %br
      = link_to "Management Review", management_result_admission_path ,:class => 'btn btn-primary'    
      %br
      %br
  
    - if current_user.teacher?
      - if("#{@admission.status}" == 'Assessment_Planned' )
        %button.btn.btn-success{"data-target" => ".bs-example-modal-sm", "data-toggle" => "modal"} Assessment Review
        .modal.fade.bs-example-modal-sm{"aria-hidden" => "true", "aria-labelledby" => "mySmallModalLabel", role: "dialog", tabindex: "-1"}
          .modal-dialog.modal-sm
            .modal-content
              %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times;
              %h4#myModal.modal-title Assessment Plan
              = form_for @admission do |f|
                .modal-body
                  .row
                    .col-sm-3
                      = f.label "Assessment Review", :class => 'col-sm-3 control-label'
                    .col-sm-5
                      = f.text_area :comment ,:class => 'form-control', :id => 'selectdate'
              
                .modal-footer
                  %button.btn.btn-default{"data-dismiss" => "modal", :type => "button",:class => 'btn btn-primary'} Close
                  = f.hidden_field :status,:value => "Assessment_Completed"
                  = button_tag "Save", :type => "submit", :class => 'btn btn-primary'

    
    - if current_user.principal?
      - if("#{@admission.status}" == 'Assessment_Completed' )
        %button.btn.btn-success{"data-target" => ".bs-example-modal-sm", "data-toggle" => "modal"} Management Review
        .modal.fade.bs-example-modal-sm{"aria-hidden" => "true", "aria-labelledby" => "mySmallModalLabel", role: "dialog", tabindex: "-1"}
          .modal-dialog.modal-sm
            .modal-content
              %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times;
              %center
                %h4.modal-title Management Review
              = form_for @admission do |f|
                .modal-body
                  %table
                    %thead
                      %tr
                        %th{style: "width:20%"} 
                          = f.label "Result", :class => 'control-label'
                        %th{style: "width:20%"} 
                          %label{for: "Selected", :id => "first"} Selected
                        %th{style: "width:20%"} 
                          %label{for: "Rejected", :id => "second"} Rejected
                    %tbody
                      %tr
                        %td
                        .btn-group{"data-toggle" => "buttons-radio"}
                        %td= f.radio_button :result, "Selected"
                        %td= f.radio_button :result, "Rejected"
                      %tr
                        %td= f.label "Management Review", :class => 'col-sm-3 control-label'
                        %td= f.text_area :description ,:class => 'form-control'
                        %td
              
                .modal-footer
                  %button.btn.btn-default{"data-dismiss" => "modal", :type => "button",:class => 'btn btn-primary'} Close
                  = f.hidden_field :status,:value => "Management_Reviewed"
                  = button_tag "Save", :type => "submit", :class => 'btn btn-primary'
                  
.row
  .col-sm-10
    .calendar2
    #myModal.modal{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
      .modal-dialog
        .modal-content
          .modal-header
            %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times;
            .row
              %h1.pull-right.btn.btn-warning
                = @admission.faculty
              %center
                %h4#myModalLabel.modal-title Assessment Plan
            = form_for @admission do |f|
              .modal-body
                .row
                  .col-sm-3
                    = f.label "Time", :class => 'col-sm-3 control-label'
                  .col-sm-5
                    = f.time_field :start_time ,:class => 'form-control'
                  
                    %br
                .row
                  .col-sm-3
                    = f.label "Description", :class => 'col-sm-3 control-label'              
                  .col-sm-5
                    = f.text_area :title ,:class => 'form-control'
                .row
                  .col-sm-3
                    
              .modal-footer
                %button.btn.btn-default{"data-dismiss" => "modal", :type => "button",:class => 'btn btn-primary'} Close
                = f.hidden_field :status,:value => "Assessment_Planned"
                = button_tag "Save", :type => "submit", :class => 'btn btn-primary' 
                  
