.row
  - if("#{@admission.status}" == "Enquiry_Created" ||"#{@admission.status}" == "Application_Created" ||"#{@admission.status}" == "Assessment_Planned" || "#{@admission.status}" == "Assessment_Completed" || "#{@admission.status}" == "Management_Reviewed" ||  "#{@admission.status}" == "Selected" )
    = render "shared/step"
  
  %br
.row
  .col-sm-8
    %table.table-striped.table-condensed
      %tr
        %td{style: "width:25%"}
          %b
            %span.label.label-info Enquiry #
        %td{style: "width:25%"}
          = @admission.form_no
        %td{style: "width:25%"}
          %b
            %span.label.label-info Admission #
        %td{style: "width:25%"}
          = @admission.admission_no
      
      %tr
        %td
          %label{for: "name"} Name
        %td
          = @admission.name
        %td
          %label{for: "klass"} Class
        %td
          = @admission.grade
      %tr
        %td
          %label{for: "dob"} DOB
        %td
          = @admission.dob
        %td
          %label{for: "gender"} Gender
        %td
          = @admission.gender
  
      %tr
        %td
          %label{for: "father_name"} Father's Name
        %td
          = @admission.father_name
        %td
          %label{for: "mother_name"} Mother's Name
        %td
          = @admission.mother_name
        
      %tr
        %td
          %label{for: "father_mobile"} Father's Mobile
        %td
          = @admission.father_mobile
        %td
          %label{for: "mother_mobile"} Mother's Mobile
        %td
          = @admission.mother_mobile

      %tr
        %td
          %label{for: "father_email"} Father's Email
        %td
          = @admission.father_email
        %td
          %label{for: "mother_email"} Mother's Email
        %td
          = @admission.mother_email
          
  .col-sm-3
  
    - if("#{@admission.status}" == 'Enquiry_Created'||"#{@admission.status}" == 'Application_Created'||"#{@admission.status}" == 'Assessment_Planned'||"#{@admission.status}" == 'Assessment_Completed'||"#{@admission.status}" == 'Management_Reviewed' )
      - if current_user.admin?
        = link_to "Close the Form", "#", :class => "change btn1 btn btn-danger",:data=> {:id => "#{@admission.id}"}
        #mypopModal.modal{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
          .modal-dialog
            .modal-content
              .modal-header
                %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times;
                %center
                  %h4#myModalLabel.modal-title Reason for Closing
                = form_for @admission do |f|
                  .modal-body
                    .row
                      .col-sm-1
                        = f.radio_button :closestatus, "Not upto the mark"
                      .col-sm-10
                        = f.label "Not Upto the Mark"
                    .row
                      .col-sm-1
                        = f.radio_button :closestatus, "Financial Crisis"
                      .col-sm-10
                        = f.label "Financial Crisis"
                    .row
                      .col-sm-1
                        = f.radio_button :closestatus, "Didn't Pick the Interview Call"
                      .col-sm-10
                        = f.label "Didn't Pick the Interview Call"
                                 
                    .modal-footer
                      %button.btn.btn-default{"data-dismiss" => "modal", :type => "button",:class => 'btn btn-primary'} Close
                      = f.hidden_field :status,:value => "Form_Closed"
                      = button_tag "Save", :type => "submit", :class => 'btn btn-primary' 
                  

      - else 
        - if current_user.admin?
          = link_to "Form Closed", "#", :class => "btn1 btn btn-success",:data=> {:id => "#{@admission.id}"}
    %br
    %br
   
                  
.row
  .col-sm-10
    .calendar2
    #myModal.modal{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
      .modal-dialog
        .modal-content
          .modal-header
            .row
              %h1.pull-right.btn.btn-warning
                = @admission.faculty
              %center
                %h4#myModalLabel.modal-title Assessment Plan
            = form_for @admission do |f|
              .modal-body
                .row
                  .col-sm-3
                    = f.label "Time", :class => 'col-sm-3 control-label'
                  .col-sm-5
                    = f.time_field :start_time ,:class => 'form-control'
                    %br
                .row
                  .col-sm-3
                    = f.label "Description", :class => 'col-sm-3 control-label'              
                  .col-sm-5
                    = f.text_area :title ,:class => 'form-control'
              .modal-footer
                = f.hidden_field :status,:value => "Assessment_Planned"
                = button_tag "Save", :type => "submit", :class => 'btn btn-primary' 
                      
   
