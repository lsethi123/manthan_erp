.pull-left
  = form_tag enquiry_index_admissions_path, method: :get do
    %input#search{name: "search", placeholder: "Enter search term...", type: "text",:class => 'form'}/
    = submit_tag "Search", name: nil, :class => 'btn btn-primary'


%h4
  %center
    Enquiry Forms

%table.table.table-striped.table-condensed.table-bordered
  %thead
    %tr
      %th Form no
      %th Name
      %th Class
      %th Gender
      %th Father's name
      %th Date of Birth
      %th Mobile
      %th E-mail
        
  %tbody
    - @admissions.each do |admission|
      %tr
        %td= admission.form_no
        %td= admission.name
        %td= admission.klass
        %td= admission.gender
        %td= admission.father_name
        %td= admission.dob
        %td= admission.mobile
        %td= admission.email

