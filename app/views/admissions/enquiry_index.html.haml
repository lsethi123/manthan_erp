.row
  .col-sm-3
    .pull-left
      .input-group
        %span.input-group-addon
          = fa_icon "search lg"
        %input#search{name: "search", placeholder: "Enter Search Term", type: "text",:class => 'form-control'}/
        %br
  .col-sm-4
    %center
      %h4
        Enquiry Forms
  
  .col-sm-4
    .pull-right
      - if current_user.admin?
        = link_to 'New Enquiry', enquiry_new_admissions_path, :class => 'btn btn-primary'
%br
%br

%table#tblData.target.table.table-striped.table-condensed.table-bordered{:style => "width:100%"}
  %thead
    %tr
      %th{:style => "width:25%"}
        Form no
      %th{:style => "width:25%"}
        Name
      %th{:style => "width:25%"}
        Class
      %th{:style => "width:25%"}
        Status
      
  %tbody
    - @admissions.each do |admission|
      %tr
        %td
          = link_to "#{admission.form_no}", home_index_admission_path(admission)
        %td
          = admission.name
        %td
          = admission.grade
        %td
          = admission.status
        
        
