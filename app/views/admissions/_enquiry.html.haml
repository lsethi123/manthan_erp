.row
  = form_for @admission,:html => { :class => "form-horizontal", :role => "form" } do |f|
    = render "shared/error_messages", :object => f.object
    .col-sm-12
      .form-group
        .col-sm-12
          .form-group
            = f.label "Form no:", :class => 'col-sm-3 control-label'
            .col-sm-4
              = f.text_field :form_no, :class => 'form-control'
              
      .form-group
        .col-sm-12
          .form-group
            = f.label "Name of the Student:", :class => 'col-sm-3 control-label'
            .col-sm-4
              = f.text_field :name, :class => 'form-control'
            
      .form-group
        .col-sm-12
          .form-group
            = f.label "Admission sought into Class:", :class => 'col-sm-3 control-label'
            .col-sm-4
              = f.text_field :klass, :class => 'form-control'
      .form-group
        .col-sm-12
          .form-group
            = f.label "Date of Birth: ", :class => 'col-sm-3 control-label'
            .col-sm-4
              = f.text_field :dob, :class => 'datepicker form-control'
      .form-group
        .col-sm-12
          .form-group
            = f.label "Male/Female: ", :class => 'col-sm-3 control-label'
            .col-sm-4
              = f.select(:gender,options_for_select([['Male'],['Female']]),{:class => 'col-sm-4 control-label'})

              
      .form-group
        .col-sm-12
          = f.label "Nationality: ", :class => 'col-sm-3 control-label'
          .col-sm-4
            = f.country_select :nationality, {object: f.object, prompt: 'Country'}

      .form-group
        .col-sm-12
          .col-sm-4
            = f.label "Language spoken at home: ", :class => 'control-label'
          .col-sm-4
            = f.select(:language, options_for_select([['Hindi'],['English'],['Tamil'],['Telugu'],['Malayalam'],['Punjabi'],['Marati'],['Urdu']]), {:class => 'form-control'})
        
      .form-group
        .col-sm-12
          .form-group
            = f.label "Father's Name:", :class => 'col-sm-3 control-label'
            .col-sm-4
              = f.text_field :father_name, :class => 'form-control'
        
      .form-group
        .col-sm-12
          .form-group
            = f.label "Mother's Name: ", :class => 'col-sm-3 control-label'
            .col-sm-4
              = f.text_field :mother_name, :class => 'form-control'
      .form-group
        .col-sm-12
          .form-group
            = f.label "Father's Occupation ", :class => 'col-sm-3 control-label'
            .col-sm-4
              = f.text_field :father_occupation, :class => 'form-control'
      .form-group
        .col-sm-12
          .form-group
            = f.label "Mother's Occupation ", :class => 'col-sm-3 control-label'
            .col-sm-4
              = f.text_field :mother_occupation, :class => 'form-control'
      .form-group
        .col-sm-12
          .form-group
            = f.label "Company's Name: ", :class => 'col-sm-3 control-label'
            .col-sm-4
              = f.text_field :father_company, :class => 'form-control'
      .form-group
        .col-sm-12
          .form-group
            = f.label "Company's Name: ", :class => 'col-sm-3 control-label'
            .col-sm-4
              = f.text_field :mother_company, :class => 'form-control'
      .form-group
        .col-sm-12
          .form-group
            = f.label "Father's Education: ", :class => 'col-sm-3 control-label'
            .col-sm-4
              = f.select(:father_education, options_for_select([['Upto SSC'],['Graduate'],['Post Graduate'],['Professional(Lawyer, Doctor,MBA,etc.,)']]),{ :class => 'form-control' })
      .form-group
        .col-sm-12
          .form-group
            = f.label "Mother's Education: ", :class => 'col-sm-3 control-label'
            .col-sm-4
              = f.select(:mother_education, options_for_select([['Upto SSC'],['Graduate'],['Post Graduate'],['Professional(Lawyer, Doctor,MBA,etc.,)']]),{ :class => 'form-control' })
      .form-group
        .col-sm-12
          .form-group
            = f.label "Family Income: ", :class => 'col-sm-3 control-label'
            .col-sm-4
              = f.select(:father_education, options_for_select([['less than Rs.20,000 p.m.'],['Rs.20,000 to Rs.50,000 p.m.'],['Rs.50,000 to Rs.1,00,000 p.m.'],['more than Rs. 1,00,000 p.m.']]),{ :class => 'form-control' })
      .form-group
        .col-sm-12
          .form-group
            = f.label "Residential Address:", :class => 'col-sm-3 control-label'
            .col-sm-4
              = f.text_field :address, :class => 'form-control'      
      .form-group
        .col-sm-12
          .form-group
            = f.label "Landline: ", :class => 'col-sm-3 control-label'
            .col-sm-4
              = f.text_field :landline, :class => 'form-control'
      .form-group
        .col-sm-12
          .form-group
            = f.label "Mobile: ", :class => 'col-sm-3 control-label'
            .col-sm-4
              = f.text_field :mobile, :class => 'form-control'
      .form-group
        .col-sm-12
          .form-group
            = f.label "Email: ", :class => 'col-sm-3 control-label'
            .col-sm-4
              = f.text_field :email, :class => 'form-control'
      .form-group
        .col-sm-12
          .form-group
            = f.label "Choice of Transport ", :class => 'col-sm-3 control-label'
            .col-sm-4
              = f.select(:transport, options_for_select([['Private'],['School']]),{:class => 'col-sm-4 form-control'})
      .form-group
        .col-sm-12
          .form-group
            = f.label "If yes, stage / required bus stop ", :class => 'col-sm-3 control-label'
            .col-sm-4
              = f.text_field :busstop, :class => 'form-control'
      .form-group
        .col-sm-12
          .form-group
            = f.label "School in Which Last Studied:", :class => 'col-sm-3 control-label'
            .col-sm-4
              = f.text_field :last_school, :class => 'form-control'
      .form-group
        .col-sm-12
          .form-group
            = f.label "City: ", :class => 'col-sm-3 control-label'
            .col-sm-4
              = f.text_field :city, :class => 'form-control'
      .form-group
        .col-sm-12
          .form-group
            = f.label "Reasons for Changing:  ", :class => 'col-sm-3 control-label'
            .col-sm-4
              = f.text_field :changing_reason, :class => 'form-control'
      .form-group
        .col-sm-12
          .form-group
            = f.label "You came to know about our school through:", :class => 'col-sm-3 control-label'
            .col-sm-4
              = f.select(:transport, options_for_select([['Friends'],['Advertisements'],['Internet'],['Word of Mouth'],['Parents whose children are studying here']]),{ :class => 'form-control' })
             
            
      .form-group
        .col-sm-2
          = f.label "If yes for Parents whose children are studying here,mention their details ", :class => 'control-label'
        
        .col-sm-1
          = f.label "Name", :class => 'col-sm-3 control-label'
        .col-sm-3
          = f.text_field :person, :class => 'form-control'
        .col-sm-1
          = f.label "Class", :class => 'control-label'
        .col-sm-3
          = f.text_field :pp, :class => 'form-control'

      
      %br
      %center
        = f.submit "Create", :class => 'btn btn-primary'
        = link_to 'Back', admissions_path, :class => 'btn btn-primary'
