.row{"ng-controller" => "TeachersTimeTablesController"}
  .row
    .col-md-2 
    .col-md-8
      .col-md-6 
        .col-md-12
          = label_tag(:grade, "Select Teacher") 
        .form-group.col-md-12
          %select{"ng-model" => "myTeacher", "ng-options" => "faculty.id as faculty.name for faculty  in faculty_names | orderBy:'name'",:class => "form-control",:required => "required"}       
            %option{style: "display:none", value: ""} Select Teacher
          = submit_tag("SHOW TIME TABLE",{class: "btn btn-primary", :ng_click => "showTimeTable()"})         
      
