.row
  .col-sm-3
    .pull-left
      .input-group
        %span.input-group-addon
          = fa_icon "search lg"
        %input#search{name: "search", placeholder: "Enter Search Term", type: "text",:class => 'form-control'}/
        %br
  .col-sm-4  
  .col-sm-4
    - if current_user.admin?
      .pull-right
        = link_to 'New Enquiry', enquiry_new_admissions_path, :class => 'btn btn-primary'
%br
%br
%table#tblData.target.table.table-striped.table-condensed.table-bordered{:style => "width:95%"}
  %thead
    %tr
      %th Enquiry Form
      %th Admission Form
      %th Student's Name
      %th Grade
      %th Status
        
  %tbody
    - @admissions.each do |admission|
      %tr
        %td{style: "width:20%"}
          = link_to "#{admission.form_no}",home_index_admission_path(admission)
        %td{style: "width:20%"}
          = link_to "#{admission.admission_no}",home_index_admission_path(admission)
        %td{style: "width:20%"}
          = admission.name
        %td{style: "width:20%"}
          = admission.grade
        %td{style: "width:20%"}
          = admission.status
      
