.row
  .col-sm-12
    .pull-right
      - if("#{@admission.status}" == 'Enquiry_Created'||"#{@admission.status}" == 'Application_Created'||"#{@admission.status}" == 'Assessment_Planned'||"#{@admission.status}" == 'Assessment_Completed'||"#{@admission.status}" == 'Management_Reviewed'||"#{@admission.status}" == 'Selected' )
        - if current_user.admin?
          %button.change.btn.btn-danger.btn-sm{"data-target" => ".bs-example-modal-sm", "data-toggle" => "modal",:data=> {:id => "#{@admission.id}"}} 
            %span.glyphicon.glyphicon-ban-circle
          #mypopModal.modal{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
            .modal-dialog
              .modal-content
                .modal-header
                  %center
                    %h4#myModalLabel.modal-title Reason for Closing
                    = form_for @admission do |f|
                      .modal-body
                        .row
                          .col-sm-1
                            = f.radio_button :closestatus, "Not upto the mark"
                          .col-sm-10
                            = f.label "Not Upto the Mark"
                        .row
                          .col-sm-1
                            = f.radio_button :closestatus, "Financial Crisis"
                          .col-sm-10
                            = f.label "Financial Crisis"
                        .row
                          .col-sm-1
                            = f.radio_button :closestatus, "Didn't Pick the Interview Call"
                          .col-sm-10
                            = f.label "Didn't Pick the Interview Call"
                              
                      .modal-footer
                        = f.hidden_field :status,:value => "Form_Closed"
                        = button_tag "Save", :type => "submit", :class => 'btn btn-primary' 
               
        - else 
          - if current_user.admin?
            %button.change.btn.btn-danger.btn-sm 
              %span.glyphicon.glyphicon-ban-circle
                  

    .container
      - if("#{@admission.status}" == "Enquiry_Created" ||"#{@admission.status}" == "Application_Created" ||"#{@admission.status}" == "Assessment_Planned" || "#{@admission.status}" == "Assessment_Completed" || "#{@admission.status}" == "Management_Reviewed" ||  "#{@admission.status}" == "Selected"|| "#{@admission.status}" == "Completed" )
        = render "shared/step"
  
      %br
      .row
        .col-sm-12
          %table.table-striped.table-condensed{:style => "width:80%"}
            %tr
              %td{style: "width:25%"}
                %b
                  %span.label.label-info Enquiry #
              %td{style: "width:25%"}
                = @admission.form_no
              %td{style: "width:25%"}
                %b
                  %span.label.label-info Admission #
              %td{style: "width:25%"}
                = @admission.admission_no
            
            %tr
              %td
                %label{for: "name"} Name
              %td
                = @admission.name
              %td
                %label{for: "klass"} Class
              %td
                = @admission.grade
            %tr
              %td
                %label{for: "DOB"} DOB
              %td
                = @admission.dob
              %td 
                %label{for: "name"} Gender
              %td
                = @admission.gender
            %tr
              %td
                %b
                  %span.label.label-info Assessment
            %tr
              %td
                %label Interviewer
              %td
                = @admission.teacher_leader.faculty_leader
              %td
                %label Timings
              %td
                = @admission.start_time
            %tr
              %td
                %label Recommended:
              %td
                = @admission.teachercomment
              %td
                %label Reason:
              %td
                = @admission.comment
            %tr
              %td
                %b
                  %span.label.label-info Management
              %td
              %td
              %td
            %tr
              %td
                %label Result
              %td
                = @admission.result
              %td
                %label Review Comments
              %td
                = @admission.description
                
                
