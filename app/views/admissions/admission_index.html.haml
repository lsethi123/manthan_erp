.pull-left
  = form_tag admission_index_admissions_path, method: :get do
    %input#search{name: "search", placeholder: "Enter search term...", type: "text"}/
    = submit_tag "Search", name: nil, :class => 'btn btn-primary'
.pull-right
  = link_to 'New Application', enquiry_new_admissions_path, :class => 'btn btn-primary'

%h4
  %center
    Application Form

%table.table.table-striped.table-condensed.table-bordered
  %thead
    %tr
      %th
      %th Form no
      %th Admission no
      %th Bus Facility
      %th Blood Group
      %th Previous study
      %th Medium
      %th Board
      %th Year
      %th Sibling's Name
        
  %tbody
    - @admissions.each do |admission|
      %tr
        %td= check_box_tag "admission_ids[]", admission.id 
        %td= admission.form_no
        %td= admission.admission_no
        %td= admission.bus
        %td= admission.blood_group
        %td= admission.last_school
        %td= admission.medium
        %td= admission.board
        %td= admission.year
        %td= admission.sib_name
