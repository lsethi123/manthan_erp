= form_for @admission, :url => {:action => 'update_assessment'}, :method => :POST do |f|
  - if @admission.errors.any?
    #error_explanation
      %h2= "#{pluralize(@admission.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @admission.errors.full_messages.each do |msg|
          %li= msg
  .row
    .field
      .col-sm-3
        = f.label :title, :class => 'control-label'
      .col-sm-3
        = f.text_field :title, :class => 'form-control'
        %br
  .row   
    .field
      .col-sm-3
        = f.label :description, :class => 'control-label'
      .col-sm-3
        = f.text_area :description, :class => 'form-control'
  %br
  .row
    .field
      .col-sm-3
        = f.label :staff, :class => 'control-label'
      .col-sm-3
        = f.text_field :staff, :class => 'form-control'
  %br
  .row
    .field
      .col-sm-3
        = f.label :grade, :class => 'control-label'
      .col-sm-3
        = f.text_field :grade, :class => 'form-control'
  %br
  .row
    .field
      .col-sm-3
        = f.label :start_time, :class => 'control-label'
      .col-sm-3
        = f.time_field :start_time, :class => 'form-control'
  %br
  .row
    .field
      .col-sm-3
        = f.label :end_time, :class => 'control-label'
      .col-sm-3
        = f.time_field :end_time, :class => 'form-control'
  %br
  .col-sm-3
    .pull-right
      = f.hidden_field :status, :value => 'Assessment_Planned'
      = f.submit 'Save',:class => 'btn btn-primary'
      
