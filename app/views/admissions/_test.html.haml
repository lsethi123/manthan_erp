.row
  = form_for @admission, :html => { :class => "form-horizontal", :role => "form" } do |f|
    = render "shared/error_messages", :object => f.object
    .col-sm-12
      .form-group
        .col-sm-3
          .pull-left
            = f.label "Form no:", :class => 'control-label'
            
        .col-sm-3
          = f.text_field :form_no, :class => 'form-control'
              
   
        .col-sm-3
          .pull-left
            = f.label "Name of the Student:", :class => 'control-label'
        .col-sm-3
          = f.text_field :name, :class => 'form-control'
            
      .form-group{"ng-controller" => "AdmissionsController"}
        .col-sm-3
          .pull-left
            = label_tag(:grade,"Admission sought into Class:")
        .col-sm-3
          %select{"ng-model" => "myAdmission", "ng-options" => "klass.grade_name for klass in klasses",:class => "form-control",:required => "required"}          
            %option{style: "display:none", value: ""} Select Grade
          
          = f.hidden_field :grade, :value => "{{myAdmission.grade_name}}"
          = f.hidden_field :grade_master_id, :value => "{{myAdmission.id}}"
        
        .col-sm-3
          .pull-left
            = f.label "Date of Birth: ", :class => 'control-label'
        .col-sm-3
          = f.text_field :dob, :class => 'datepicker form-control'

      .form-group
        .col-sm-3
          .pull-left
            = f.label "Male/Female: ", :class => ' control-label'
        .col-sm-3
          = f.select :gender, options_for_select([['Male'],['Female']])
        .col-sm-3
          .pull-left
            = f.label "Language spoken at home: ", :class => 'control-label'
        .col-sm-3
          = f.select :language, options_for_select([['Hindi'],['English'],['Tamil'],['Telugu'],['Malayalam'],['Punjabi'],['Marati'],['Urdu']])
 
      .form-group
        .col-sm-3
          .pull-left
            = f.label "Nationality: ", :class => 'control-label'
        .col-sm-3
          = f.country_select :nationality, {object: f.object, prompt: 'India'}

        .col-sm-3
          .pull-left
            = f.label "Family Income: ", :class => 'control-label'
        .col-sm-3
          = f.select :income, options_for_select([['Less than Rs.20,000 p.m.'],['Graduate'],['Post Graduate'],['Professional(Lawyer, Doctor, MBA, etc.,)']])
        
        
      .form-group
        .col-sm-3
          .pull-left
            = f.label "Father's Name:", :class => 'control-label'
        .col-sm-3
          = f.text_field :father_name, :class => 'form-control'
        .col-sm-3
          .pull-left
            = f.label "Mother's Name: ", :class => 'control-label'
        .col-sm-3
          = f.text_field :mother_name, :class => 'form-control'
      .form-group
        .col-sm-3
          .pull-left
            = f.label "Father's Occupation: ", :class => 'control-label'
        .col-sm-3
          = f.text_field :father_occupation, :class => 'form-control'
        .col-sm-3
          .pull-left
            = f.label "Mother's Occupation: ", :class => 'control-label'
        .col-sm-3
          = f.text_field :mother_occupation, :class => 'form-control'
      .form-group
        .col-sm-3
          .pull-left
            = f.label "Company's Name: ", :class => 'control-label'
        .col-sm-3
          = f.text_field :father_company, :class => 'form-control'
        .col-sm-3
          .pull-left
            = f.label "Company's Name: ", :class => 'control-label'
        .col-sm-3
          = f.text_field :mother_company, :class => 'form-control'
      .form-group
        .col-sm-3
          .pull-left
            = f.label "Father's Education: ", :class => 'control-label'
        .col-sm-3
          = f.select :father_education, options_for_select([['Upto SSC'],['Graduate'],['Post Graduate'],['Professional(Lawyer, Doctor, MBA, etc.,)']])
        .col-sm-3
          .pull-left
            = f.label "Mother's Education: ", :class => 'control-label'
        .col-sm-3
          = f.select :mother_education, options_for_select([['Upto SSC'],['Graduate'],['Post Graduate'],['Professional(Lawyer, Doctor, MBA, etc.,)']])
      .form-group
        .col-sm-3
          .pull-left
            = f.label "Residential Address:", :class => 'control-label'
        .col-sm-3
          = f.text_area :address, :class => 'form-control'
        .col-sm-3
          .pull-left
            = f.label "Email: ", :class => 'control-label'          
        .col-sm-3
          = f.text_field :email, :class => 'form-control'
      .form-group
        .col-sm-3
          .pull-left
            = f.label "Landline: ", :class => 'control-label'
        .col-sm-3
          = f.text_field :landline, :class => 'form-control'
        .col-sm-3
          .pull-left
            = f.label "Mobile: ", :class => 'control-label'
        .col-sm-3
          = f.text_field :mobile, :class => 'form-control'
      
      .form-group
        .col-sm-3
          .pull-left
            = f.label "Bus Facility: ", :class => 'control-label'
        .col-sm-3
          = f.select(:bus, options_for_select([['Yes','t'],['No','f']]),{:class => 'form-control'})
      .form-group
        .col-sm-3
          .pull-left#textbox
            = f.label "Choice of Transport:", :class => 'control-label'
        .col-sm-3
          = f.select :transport, options_for_select([['Private'],['School']])
        .col-sm-3
          .pull-left
            = f.label "Bus Stop", :class => 'textbox2'
        .col-sm-3
          = f.text_field :busstop, :class => 'textbox2 form-control'
        
          
        
      .form-group
        .col-sm-3
          .pull-left
            = f.label "School in Which Last Studied:", :class => 'control-label'
        .col-sm-3
          = f.text_field :last_school, :class => 'form-control'
        .col-sm-3
          .pull-left
            = f.label "City: ", :class => 'control-label'
        .col-sm-3
          = f.text_field :city, :class => 'form-control'
      .form-group
        .col-sm-3
          .pull-left
            = f.label "Reasons for Changing:  ", :class => 'control-label'
        .col-sm-3
          = f.text_field :changing_reason, :class => 'form-control'
 
        .col-sm-3
          .pull-left
            = f.label "Know about our school through:", :class => 'control-label'
        .col-sm-3
          = f.select(:know_school, options_for_select([['Friends'],['Advertisements'],['Internet'],['Word of Mouth'],['Parents whose children are studying here']]),{ :class => 'form-control' })
      .form-group
        .col-sm-3
          .pull-left
            = f.label "Name:", :class => 'textbox1 control-label'
        .col-sm-3
          = f.text_field :person, :class => 'textbox1 form-control'
        .col-sm-3
          .pull-left
            = f.label "Class:", :class => 'textbox1 control-label'
        .col-sm-3
          = f.text_field :pp, :class => 'textbox1 form-control'
      %center
        
        = f.hidden_field :status, :value => 'Enquiry_Created'
        = f.submit "Create", :class => 'btn btn-primary'
        = f.submit "Reset", :type => "reset" , :class => 'btn btn-primary'
        

    
