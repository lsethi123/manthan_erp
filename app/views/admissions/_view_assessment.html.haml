.row
  = render "shared/steplink"
  %br
.row
  .col-sm-8
    %table.table-striped.table-condensed
      %tr
        %td{style: "width:25%"}
          %b
            %span.label.label-info Enquiry #
        %td{style: "width:25%"}
          = @admission.form_no
        %td{style: "width:25%"}
          %b
            %span.label.label-info Admission #
        %td{style: "width:25%"}
          = @admission.admission_no
      
      %tr
        %td
          %label{for: "name"} Name
        %td
          = @admission.name
        %td
          %label{for: "klass"} Class
        %td
          = @admission.klass
      %tr
        %td
          %label{for: "dob"} DOB
        %td
          = @admission.dob
        %td
          %label{for: "gender"} Gender
        %td
          = @admission.gender
  
      %tr
        %td
          %label{for: "father_name"} Father's Name
        %td
          = @admission.father_name
        %td
          %label{for: "mother_name"} Mother's Name
        %td
          = @admission.mother_name
        
      %tr
        %td
          %label{for: "father_mobile"} Father's Mobile
        %td
          = @admission.father_mobile
        %td
          %label{for: "mother_mobile"} Mother's Mobile
        %td
          = @admission.mother_mobile

      %tr
        %td
          %label{for: "father_email"} Father's Email
        %td
          = @admission.father_email
        %td
          %label{for: "mother_email"} Mother's Email
        %td
          = @admission.mother_email
  - if current_user.admin?
    .col-sm-1
      .pull-left
        = link_to raw("<span class='glyphicon glyphicon-edit'></span>"), edit_assessment_admission_path, :class => "btn btn-warning btn-sm", :title => "Edit"        

    


  .col-sm-3
  
    - if("#{@admission.status}" == 'Enquiry_Created'||"#{@admission.status}" == 'Application_Created'||"#{@admission.status}" == 'Assessment_Planned'||"#{@admission.status}" == 'Assessment_Completed'||"#{@admission.status}" == 'Management_Reviewed' )
      = link_to "Close the Form", "#", :class => "change label label-danger",:data=> {:id => "#{@admission.id}"}
    - else 
      = link_to "Form Closed", "#", :class => "label label-success",:data=> {:id => "#{@admission.id}"}
    %br
    %br
    = link_to "View Enquiry", enquiry_show_admission_path , :class => 'enq_button btn btn-primary'
    %br
    %br
    - if("#{@admission.status}" == 'Enquiry_Created' )
      = link_to "Create Application", admission_new_admission_path , :class => 'enq_button btn btn-primary'
      
    - if("#{@admission.status}" == 'Application_Created')
      = link_to "View Application", admission_show_admission_path , :class => 'enq_button btn btn-primary'
      %br
      %br
      = link_to "Create Assessment", assessment_new_admission_path ,:class => 'enq_button btn btn-primary'    
      %br
      %br
    - if("#{@admission.status}" == 'Assessment_Planned' )
      = link_to "View Application", admission_show_admission_path , :class => 'enq_button btn btn-primary'
      %br
      %br
      = link_to "View Assessment", view_assessment_admission_path ,:class => 'enq_button btn btn-primary'    
      %br
      %br
      
    - if("#{@admission.status}" == 'Assessment_Completed' )
      = link_to "View Application", admission_show_admission_path , :class => 'enq_button btn btn-primary'
      %br
      %br
      = link_to "View Assessment", view_assessment_admission_path ,:class => 'enq_button btn btn-primary'    
      %br
      %br
      = link_to "Assessment Result", assessment_result_admission_path ,:class => 'enq_button btn btn-primary'  
      %br
      %br
    - if("#{@admission.status}" == 'Management_Reviewed' )
      = link_to "View Application", admission_show_admission_path , :class => 'enq_button btn btn-primary'
      %br
      %br
      = link_to "View Assessment", view_assessment_admission_path ,:class => 'enq_button btn btn-primary'    
      %br
      %br
      = link_to "Assessment Result", assessment_result_admission_path ,:class => 'enq_button btn btn-primary'    
      %br
      %br
      = link_to "Management Review", management_result_admission_path ,:class => 'enq_button btn btn-primary'    
      %br
      %br
    - if current_user.principal?
      - if("#{@admission.status}" == 'Assessment_Planned' )
        %button.btn.btn-success{"data-target" => ".bs-example-modal-sm", "data-toggle" => "modal"} Management Review
        .modal.fade.bs-example-modal-sm{"aria-hidden" => "true", "aria-labelledby" => "mySmallModalLabel", role: "dialog", tabindex: "-1"}
          .modal-dialog.modal-sm
            .modal-content
              %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times;
              %h4.modal-title Management Review
              = form_for @admission do |f|
                .modal-body
                  .row
                    .col-sm-3
                      = f.label "Management Review", :class => 'col-sm-3 control-label'
                    .col-sm-5
                      = f.text_area :result ,:class => 'form-control', :id => 'selectdate'
                .modal-footer
                  %button.btn.btn-default{"data-dismiss" => "modal", :type => "button",:class => 'btn btn-primary'} Close
                  = f.hidden_field :status,:value => "Management_Reviewed"
                  = button_tag "Save", :type => "submit", :class => 'btn btn-primary'
                
    
   
.row
  .col-sm-8
    #accordion.panel-group
      .panel.panel-default
        .panel-heading
          %h4.panel-title
            %a{"data-parent" => "#accordion", "data-toggle" => "collapse", href: "#collapseOne"}
              Assessment Plan
        #collapseOne.panel-collapse.collapse.in
          .panel-body
            %b
              %label.btn.btn-default
                = @admission.teacher_leader.faculty_leader
                
            .pull-right
              %label.btn.btn-default
                = @admission.start_time
