.row
  = render "shared/step"
  %br
.row
  .col-sm-8
    %table.table-striped.table-condensed
      %tr
        %td{style: "width:25%"}
          %b
            %span.label.label-info Enquiry #
        %td{style: "width:25%"}
          = @admission.form_no
        %td{style: "width:25%"}
          %b
            %span.label.label-info Admission #
        %td{style: "width:25%"}
          = @admission.admission_no
      
      %tr
        %td
          %label{for: "name"} Name
        %td
          = @admission.name
        %td
          %label{for: "klass"} Class
        %td
          = @admission.klass
      %tr
        %td
          %label{for: "dob"} DOB
        %td
          = @admission.dob
        %td
          %label{for: "gender"} Gender
        %td
          = @admission.gender
  
      %tr
        %td
          %label{for: "father_name"} Father's Name
        %td
          = @admission.father_name
        %td
          %label{for: "mother_name"} Mother's Name
        %td
          = @admission.mother_name
        
      %tr
        %td
          %label{for: "father_mobile"} Father's Mobile
        %td
          = @admission.father_mobile
        %td
          %label{for: "mother_mobile"} Mother's Mobile
        %td
          = @admission.mother_mobile

      %tr
        %td
          %label{for: "father_email"} Father's Email
        %td
          = @admission.father_email
        %td
          %label{for: "mother_email"} Mother's Email
        %td
          = @admission.mother_email
  - if current_user.admin?
    .col-sm-1
      .pull-left
        %button.btn.btn-warning.btn-sm{"data-target" => ".bs-example-modal-sm", "data-toggle" => "modal"} 
          %span.glyphicon.glyphicon-edit
        .modal.fade.bs-example-modal-sm{"aria-hidden" => "true", "aria-labelledby" => "mySmallModalLabel", role: "dialog", tabindex: "-1"}
          .modal-dialog.modal-sm
            .modal-content
              %h4#myModal.modal-title Edit Assessment 
              = form_for @admission do |f|
                .modal-body
                  .row
                    .col-sm-3
                      = f.label "Time", :class => 'col-sm-3 control-label'
                    .col-sm-5
                      = f.time_field :start_time ,:class => 'form-control'
                      %br
                  .row
                    .col-sm-3
                      = f.label "Description", :class => 'col-sm-3 control-label'              
                    .col-sm-5
                      = f.text_area :title ,:class => 'form-control'
                  .row
                    .col-sm-3
                .modal-footer
                  = f.hidden_field :status,:value => "Assessment_Planned"
                  = button_tag "Save", :type => "submit", :class => 'btn btn-primary' 
  .col-sm-3
  
    - if("#{@admission.status}" == 'Enquiry_Created'||"#{@admission.status}" == 'Application_Created'||"#{@admission.status}" == 'Assessment_Planned'||"#{@admission.status}" == 'Assessment_Completed'||"#{@admission.status}" == 'Management_Reviewed' )
      - if current_user.admin?
        = link_to "Close the Form", "#", :class => "change btn1 btn btn-danger",:data=> {:id => "#{@admission.id}"}
    - else 
      - if current_user.admin?
        = link_to "Form Closed", "#", :class => "btn1 btn btn-success",:data=> {:id => "#{@admission.id}"}
    %br
    %br
   
.row
  .col-sm-8
    #accordion.panel-group
      .panel.panel-default
        .panel-heading
          %h4.panel-title
            %a{"data-parent" => "#accordion", "data-toggle" => "collapse", href: "#collapseOne"}
              Assessment Plan
        #collapseOne.panel-collapse.collapse.in
          .panel-body
            %b
              %label.btn.btn-default
                = @admission.teacher_leader.faculty_leader
                
            .pull-right
              %label.btn.btn-default
                = @admission.start_time
