= form_for Canteenmanager.new  do |f|             
  .row
    .col-sm-4
      = f.label "Date", :class => 'control-label'
    .col-sm-4
      = f.text_field :date, :class => 'datepicker form-control'
      %br
  .row   
    .col-sm-4
      = f.label "breakfast", :class => 'control-label'
    .col-sm-4
      = f.text_area :breakfast ,:class => 'form-control'
      %br
  .row
    .col-sm-4
      = f.label "lunch" ,:class => 'control-lable'
    .col-sm-4
      = f.text_area :lunch, :class => 'form-control'
      %br
  .row
    .col-sm-4
      = f.label "snacks" ,:class => 'control-lable'
    .col-sm-4
      = f.text_area :snacks, :class => 'form-control'
      %br
  .row
    .col-sm-4
      = f.label "dinner" ,:class => 'control-lable'
    .col-sm-4
      = f.text_area :dinner, :class => 'form-control'
      %br
  .modal-footer
    = button_tag "Save", :type => "submit", :class => 'btn btn-primary'
   

   
