%button.btn.btn-primary{"data-target" => "#myModal","data-toggle" => "modal"}= "Add"
#myModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times;
        %h4#myModalLabel.modal-title Vendor
        = form_for VendorManagement.new , :html => { :class => "form-horizontal", :role => "form"} do |f| 
          .modal-body
            .row
              .col-sm-4
                //= f.label "Category"
              .col-sm-4
                //= f.text_field "category", :class => 'form-control'
                %br
            .row
              .col-sm-4
                = f.label "Vendor Name"
              .col-sm-4
                = f.text_field "vendor_name", :class => 'form_control'
                %br
            .row
              .col-sm-4
                = f.label "Vendor Phone"
              .col-sm-4
                = f.text_field "vendor_phone", :class => 'form-control'
                %br
            .row
              .col-sm-4
                = f.label "Vendor Email"
              .col-sm-4
                = f.text_field "vendor_email", :class => 'form_control'
                %br
            .row
              .col-sm-4
                = f.label "Alternate no#"
              .col-sm-4
                = f.text_field "vendor_alternate_email", :class => 'form-control'
                %br
            .row
              .col-sm-4
                = f.label "Address"
              .col-sm-4
                = f.text_field "vendor_address", :class => 'form_control'
                %br
                .row
              .col-sm-10
              .col-sm-2
                = button_tag "Save", :type => "submit", :class => 'btn btn-primary'
      
