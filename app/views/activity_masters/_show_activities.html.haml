.col-md-12
  .col-md-7
    %table#tblData.target.table.table-striped.table-condensed.table-bordered
      %thead
        %tr        
          %th Activity Name
          %th Delete
        %tbody
          %tr{"ng-repeat" => "activity in activities | orderBy:'activity_name'"}
            %td {{activity.activity_name}}         
            %td           
              = link_to raw("<span class='glyphicon glyphicon-trash'></span>"), "#", :class => "btn btn-danger btn-sm", :title => "Delete", :ng_click => "deleteActivity(activity)"
