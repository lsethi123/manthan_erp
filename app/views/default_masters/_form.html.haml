%form{:class=>"form-horizontal", :ng_submit => "isNew ? submitForm() : update()", :name => "defaultForm"}
  .form-group
    = label_tag  "Name", nil, :class => "form-label col-md-2"
    .col-md-5
      %input{:type => "text", :class => "form-control", :ng_model => "defaultMaster.default_name", :placeholder => "Name", :readonly => true}
  .form-group
    = label_tag  "Description", nil, :class => "form-label col-md-2"
    .col-md-5
      %input{:type => "text", :class => "form-control", :ng_model => "defaultMaster.default_desc", :placeholder => "Description", :readonly => true}
  .form-group
    = label_tag  "Value", nil, :class => "form-label col-md-2"
    .col-md-5
      %input{:type => "text", :class => "form-control", :ng_model => "defaultMaster.default_value", :placeholder => "Value", :name => "values", :max => "100"}
        %span{:ng_show => "defaultValueError"} {{defaultValueError}}

  .row
    .col-md-5.col-md-offset-3
      %button{:type=>"submit", :class=> "btn btn-primary"}=  "Save"
