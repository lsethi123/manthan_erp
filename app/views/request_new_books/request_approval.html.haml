.panel.panel-default
  .test
    .col-sm-3
      .pull-left
        .input-group
          %span.input-group-addon
            = fa_icon "search lg"
          %input#search{name: "search", placeholder: "Enter Search Term", type: "text",:class => 'form-control'}
          %br
    .col-sm-4
      %center
        %h4
          Books For Approval
%table#tblData.target.table.table-striped.table-condensed.table-bordered
  %thead
    %tr
      
      %th Book Name
      %th Author Name
      %th
  %tbody
    - @request_new_books.each do |request|
      %tr
        %td= request.book_name
        %td= request.author_name
        %td= link_to "Send Approval",home_request_approval_request_new_book_path(request), :class => 'btn btn-danger'
