.col-sm-10{"ng-controller" => "RequestsController"}
  .panel.panel-default
    .test
      .col-sm-3
        .pull-left
          .input-group
            %span.input-group-addon
              = fa_icon "search lg"
            %input#search{name: "search", placeholder: "Enter Search Term", type: "text",:class => 'form-control'}/
            %br
      .col-sm-4
        %center
          %h3
            Books
      .col-sm-4 
        .pull-right
          = link_to "New Books", "#", :class => "btn btn-primary", :ng_click => "newRequest()"
                         
    
  %table#tblData.table.table.striped.table-bordered.table-condensed.table-hover
    %thead
      %tr
        %th Book Name
        %th Author Name
        %th
    %tbody
      - @request_new_books.each do |request|
        %tr
          %td= request.book_name
          %td= request.author_name
          %td= link_to raw("<span class='glyphicon glyphicon-trash'></span>"), request_new_book_path(request), :class => "btn btn-danger btn-sm", :data => {:method => 'delete' , :confirm => "Are You Sure to Delete ?"}, :title => "Delete" 

      
  .modal.fade{ :id => "createModal", :tabindex => "-1", :role => "dialog", "aria-labelledby" => "myModalLabel", "aria-hidden" => "true"}
    .modal-dialog
      .modal-content
        .modal-header
          %button{ :class => "close", "data-dismiss" => "modal", "aria-hidden" => "true" } &times;
          %h4.modal-title{ :id => "myModalLabel"} New Book
        .modal-body
          = render "requestbook"
          
