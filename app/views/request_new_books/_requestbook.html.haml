%form{:class=>"form-horizontal", :ng_submit => "submitBooks()" }
  .form-group{"ng-repeat" => "request in newRequests"}
    = label_tag  "Book {{$index+1}}", nil, :class => "form-label col-md-2"
    .col-sm-4  
      = text_field_tag  "[book_name]",nil, :class => "form-control", :ng_model => "request.book_name", :placeholder => "Name"
     
    .col-sm-4
      = text_field_tag "[author_name]",nil, :class => 'form-control', :placeholder => "Author",  :ng_model => "request.author_name"
      
    
  .row
    .col-md-5.col-md-offset-3
      %button{:type => "button", :class=> "btn btn-primary", :ng_click => "addMorebooks()"}=  "More books"
      %button{:type=>"submit", :class=> "btn btn-primary"}=  "Save"
      %input{:name => "status", "value" => "Send_Approval", :type => "hidden"}
