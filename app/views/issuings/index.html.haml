= form_tag("/issuings", :method => "get") do
  .row{"ng-controller" => "IssuingsController"}
    .form-group.col-md-3
      %label{:class=> "form-label col-md-4"} Grade
      .col-sm-6
        %select{"ng-model" => "myGrade", :ng_options => "grade.id as grade.grade for grade in grades", :class => "form-control", :name => "grade_master_id"}
             
    .form-group.col-md-3
      %label{:class=> "form-label col-md-4"} Section
      .col-sm-6
        %select{"ng-model" => "mySection", :ng_options => "section.id  as section.section for section in sections | filter: {grade_master_id: myGrade}", :class=>"form-control", :name => "section_master_id"}
    .col-md-4
      = submit_tag 'Save'
    .pull-left
      .col-sm-10                 
        %input#search{name: "search", placeholder: "Enter Search Term...", type: "text",:class => 'form-control'}
%br
= form_tag("/issuings", :method => "POST") do
  %table#tblData.target.table.table-striped.table-condensed.table-bordered{style: "width:70%"}
    %thead
      %tr
        %th Name
        %th Return
        %th Aloted Books
      
     
    %tbody
      - @book_issuing_objects.each do |bio|
        %tr
          %td= bio.student.name
          %td= link_to raw("<span class='glyphicon glyphicon-trash'></span>"), issuings_path, :class => "btn btn-danger btn-sm", :data => {:method => 'delete' , :confirm => "Are You Sure to Delete ?"}, :title => "Delete"
          = hidden_field_tag "book_issuing_objects[][student_master_id]", "#{bio.student.id} "
          %td
            - bio.issuings.each do |issuing|
              // = "#{issuing.book} "
              //= text_field_tag "issuings[book][][name]", nil, :placeholder=> " - Add Book- "
              = text_field_tag "book_issuing_objects[][issuings][][book]", "#{issuing.book} "
              = hidden_field_tag "book_issuing_objects[][issuings][][id]", "#{issuing.id}"
        
         
  .row
    %center
      %button{:type=>"submit", :class=> "btn btn-primary" }=  "save" 
