%h4 
  = "Mailing Jobs"
%hr
%table.table.table-bordered.table-hover
  %thead
    %th Job Run Id
    %th Description
    %th Scheduled By
    %th Start Time
    %th End Time
    %th Status
    %th Failed Mails
  %tbody
    - @job_runs.each do |job_run|
      %tr
        %td= job_run.id
        %td= link_to job_run.job.description, failure_recipients_job_run_path(job_run)
        %td= job_run.scrolled_by
        %td= job_run.started_on
        %td= job_run.finished_on
        %td= job_run.status
        %td= job_run.fee_alert_failures.count
        
= will_paginate @job_runs, param_name: "page", previous_label: h("<"), next_label: h(">")
