.col-md-7{"ng-controller" => "InventoriesController"}
  %h3
    = "Inventories"
    .pull-right
      = link_to "Request for Inventory", "#", :class => "btn btn-primary", :ng_click => "newInventory()"
    .pull-left
      .col-sm-10
        %input#search{name: "search", placeholder: "Enter Search Term...", type: "text",:class => 'form-control'}
          %br
        
  %table#tblData.target.table.table-striped.table-condensed.table-bordered
    %thead
      %tr
        %th Name
        %th Type
        %th Quantity
        
    %tbody
      - @inventories.each do |inv|
        %tr
          %td= inv.name
          %td= inv.inventory_type
          %td= inv.quantity
           



  .modal.fade{ :id => "createModal", :tabindex => "-1", :role => "dialog", "aria-labelledby" => "myModalLabel", "aria-hidden" => "true"}
    .modal-dialog
      .modal-content
        .modal-header
          %button{ :class => "close", "data-dismiss" => "modal", "aria-hidden" => "true" } &times;
          %h4.modal-title{ :id => "myModalLabel"} Inventories
        .modal-body
          = render "form"
