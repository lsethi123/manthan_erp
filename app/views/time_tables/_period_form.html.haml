            %ul
              %li{"ng-repeat" => "grade in grades"} 
                = text_field_tag  "grade",nil, :class => "form-control",:ng_model => "grade",:placeholder => "grade"
                {{grade}}
    .row
      .Container{"ng-controller" => "GetGradeController"}
        %h3 looping with the ng-repeat Directive l0
        .form-group
          = label_tag  "Enter Grade", nil, :class => "form-label col-md-2"
          .col-md-8
            %select{"ng-model" => "myGrade", "ng-options" => "grade.grade for grade in grades"}
