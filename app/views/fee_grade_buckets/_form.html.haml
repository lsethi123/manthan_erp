= form_tag create_bulk_fee_grade_buckets_path, :method => "POST", :class=> "form-horizantal" do 
  .row{"ng-repeat" => "bucket_name in fee_grade_buckets"}
    .form-group
      = label_tag "Bucket {{$index+1}}", nil, :class => "form-label col-md-2"
      .col-md-5
        = text_field_tag "bulk_fee_grade_buckets[][bucket_name]",nil, :class => "form-control"
  .row
    .col-md-5.col-md-offset-3
      %button{:type=>"submit", :class=> "btn btn-primary"}=  "Save"
      = link_to "Back", fee_grade_buckets_path, :class => "btn btn-primary"

      
