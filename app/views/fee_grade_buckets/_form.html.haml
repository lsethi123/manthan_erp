= form_tag create_bulk_fee_grade_buckets_path, :method => "POST", :class=> "form-horizantal" do 
  .col-md-12.form-group{"ng-repeat" => "grade_from in fee_grade_buckets"}
    = label_tag "Bucket {{$index+1}}", nil, :class => "form-label col-md-2"
    .col-md-3
      %select{:class => "form-control" , :placeholder => "From" ,"ng-model" => "fee_grade_buckets[$index]['grade_from']", :ng_options => "grade.id as grade.grade_name for grade in grades"}
      = hidden_field_tag "bulk_fee_grade_buckets[][grade_from]", "{{fee_grade_buckets[$index]['grade_from']}}" 
    .col-md-3
      %select{:class => "form-control" , :placeholder => "To" ,"ng-model" =>  "fee_grade_buckets[$index]['grade_to']", :ng_options => "grade.id as grade.grade_name for grade in grades"}
      = hidden_field_tag "bulk_fee_grade_buckets[][grade_to]", "{{fee_grade_buckets[$index]['grade_to']}}" 
  .row
    .col-md-5.col-md-offset-3
      %button{:type=>"submit", :class=> "btn btn-primary"}=  "Save"
      = link_to "Back", fee_grade_buckets_path, :class => "btn btn-primary"

      
