%h3 
  = "Types Of Buckets"
  = link_to "Define bulk", new_fee_grade_bucket_path, :class => "btn btn-primary"
  = render "form_modal"
%table.table.table-bordered
  %thead
    %tr
      %th From
      %th To
      %th
  %tbody
    - @fee_grade_buckets.each do |fee_grade_bucket |
      %tr
        %td= fee_grade_bucket.grade_from
        %td= fee_grade_bucket.grade_to
        %td
          = link_to raw("<span class='glyphicon glyphicon-edit'></span>"), edit_fee_grade_bucket_path(fee_grade_bucket), :class => "btn btn-warning btn-sm", :title => "Edit"
          = link_to raw("<span class='glyphicon glyphicon-trash'></span>"),fee_grade_bucket_path(:id => fee_grade_bucket.id), :class => "btn btn-danger btn-sm", :data=> {:confirm => "Are you sure?", method: :delete}, :title => "Delete"
          
= will_paginate @fee_grade_buckets, param_name: "page", previous_label: h("<"), next_label: h(">")          

   

   
   
