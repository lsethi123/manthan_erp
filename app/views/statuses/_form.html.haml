= link_to "Add New", "#", :class => 'Modal btn btn-primary'
#Modal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "mySmallModalLabel", role: "dialog", tabindex: "-1", "data-backdrop" => "static","data-keyboard" => "false"}
  .modal-dialog.modal-sm
    .modal-content
      .modal-header
        .row
          .pull-left
            .col-sm-12
              %h4#Modal.modal-title Status
              %hr
              %center
                = form_for @status do |f|
                  .modal-body
                    .row
                      .col-sm-3
                        = f.label "Reasons", :class => 'control-label'
                      .col-sm-4
                        = f.text_field :reason ,:class => 'form-control'
                  .pull-right
                    = button_tag "Save", :type => "submit", :class => 'btn btn-primary'
                
