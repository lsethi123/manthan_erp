%h3 
  = "Post Dated Cheques"
  = link_to "New Cheque", new_post_dated_cheque_path, :class => "btn btn-primary"

%table.table.table-bordered
  %thead
    %tr
      %th Date
      %th Amount in Percent
      %th 
  %tbody
    - @post_dated_cheques.each do |post_dated_cheque|
      %tr
        %td= post_dated_cheque.date
        %td= post_dated_cheque.amount_per
        %td
          = link_to "Edit", edit_post_dated_cheque_path(post_dated_cheque), :class => "btn btn-warning"
          = link_to "Delete", post_dated_cheque_path(post_dated_cheque), :class => "btn btn-danger", :data => {:method => 'delete' , :confirm => "Are You Sure to Delete ?"}

= will_paginate @post_dated_cheques, param_name: "page", previous_label: h("<"), next_label: h(">")          
        
