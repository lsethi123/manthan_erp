= form_for @mealtype  do |f|             
  .row
    .col-sm-4
      = f.label "MealType", :class => 'control-label'
    .col-sm-4
      = f.label "Time", :class => 'control-label'
  .row
    .col-sm-4
      = f.text_field :meal_type ,:class => 'form-control'
    .col-sm-4
      = f.text_field :time, :class => 'form-control'
    
  .modal-footer
   
    %button{:type=>"submit", :class=> "btn btn-primary"}=  "Save"
                      

