%h4.panel-title 
  = "Transactions History"
  = link_to (fa_icon "angle-double-up lg", :id => "collapse-icon"),"#" ,:class => "collapse-link pull-right", :data => {:toggle => "collapse", :target => "#collapse-div0"}
%hr
#collapse-div0

  .col-md-6{:ng_controller => "PaymentTransactionsController", :ng_init => "getParentPaymentTransactions('#{@parent_payment_master.id}')"}
    .panel.panel-default
      .panel-heading
        Transactions
      %table.table.table-bordered.table-striped.table-hover
        %thead
          %th Transaction Date
          %th Amount
          %th Type
          %th Particulars
        %tbody
          %tr{"ng-repeat" => "transaction in parent_payment_transactions"}
            %td {{transaction.transaction_date}}
            %td {{transaction.amount_in_rupees}}
            %td {{transaction.transaction_type}}
            %td {{transaction.particulars}}
            
  .col-md-6{:ng_controller => "MonthlyPdcsController", :ng_init => "submitted_pdcs('#{@parent_payment_master.id}')"}
    = render "submitted_pdc"
