.row
  .col-sm-3
    .pull-left
      .input-group
        %span.input-group-addon
          = fa_icon "search lg"
        %input#search{name: "search", placeholder: "Enter Search Term", type: "text",:class => 'form-control'}/
        %br
  .col-sm-4
    %center
      %h4
        Assessment Planned
%br
%br

%table#tblData.target.table.table-striped.table-condensed.table-bordered{:style => 'width: 100%'}
  %thead
    %tr
      %th{:style => 'width: 20%'} Form no
      %th{:style => 'width: 20%'} Name
      %th{:style => 'width: 20%'} Post
      %th{:style => 'width: 20%'} Status
      
        
  %tbody
    - @staffrecruits.each do |staffrecruit|
      %tr
        %td= link_to "#{staffrecruit.form_no}", homeindex_staffrecruit_path(staffrecruit)
        %td= staffrecruit.faculty_name
        %td= staffrecruit.post
        %td= staffrecruit.status
