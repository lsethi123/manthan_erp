.panel.panel-default
  .panel-body
    .col-sm-3
      .pull-left
        .input-group
          %span.input-group-addon
            = fa_icon "search lg"
          %input#search{name: "search", placeholder: "Enter Search Term...", type: "text",:class => 'form-control'}/
          %br
    .col-sm-4
      %center
        %h4
          List of Selected Forms
          %br
          %br

%table#tblData.target.table.table-striped.table-condensed.table-bordered
  %thead
    %tr
      %th Form no
      %th Name
      %th Educational Qualification
      %th Gender
      %th Post
      %th Assessment Comment
      %th Management Comment
      %th Result
        
  %tbody
    - @staffrecruits.each do |staffrecruit|
      %tr
        %td= link_to "#{staffrecruit.form_no}", homeindex_staffrecruit_path(staffrecruit)
        %td= staffrecruit.name
        %td= staffrecruit.education_qualification
        %td= staffrecruit.gender
        %td= staffrecruit.post
        %td= staffrecruit.comments
        %td= staffrecruit.description
        %td= staffrecruit.final_result

