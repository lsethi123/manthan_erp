.modal.fade{ :id => "admModal", :tabindex => "-1", :role => "dialog", "aria-labelledby" => "myModalLabel", "aria-hidden" => "true"}
  .modal-dialog
    .modal-content
      .modal-header
        %button{ :class => "close", "data-dismiss" => "modal", "aria-hidden" => "true" } &times;
        %h4.modal-title Status Report
      .modal-body
        %table.table.table-bordered.table-hover.table-striped
          %thead
            %th Form no
            %th Name
            %th Grade
            %th Father
            %th Mobile
            %th Email
          %tbody
            %tr{"ng-repeat" => "row in table_data"}
              %td {{row.form_no}}
              %td {{row.name}}
              %td {{row.grade}}
              %td {{row.father_name}}
              %td {{row.mobile}}
              %td {{row.email}}
        %center
          = link_to "Print", "/admission_reports/get_admissions_on_status.pdf?status={{drilItem}}", :target => "_blank", :class => "btn btn-primary"
