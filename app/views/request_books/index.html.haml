.row{"ng-controller" => "RequestBooksController"} 
  .row
    = render 'show_request_books'  
  .row
    .modal.fade{ :id => "mailSubjectModal", :tabindex => "-1", :role => "dialog", "aria-labelledby" => "myModalLabel", "aria-hidden" => "true"}
      .modal-dialog
        .modal-content
          .modal-header
            %button{ :class => "close", "data-dismiss" => "modal", "aria-hidden" => "true" } &times;
            %h4.modal-title{ :id => "myModalLabel"} MAIL TO BOOKS VENDOR
          .modal-body
            .row
              .col-md-2
                = label_tag "Vendor", nil, :class => "form_label"
              .col-md-8
                %select{"ng-model" => "myVendor", "ng-options" => "vendor as vendor.contact_name+' - '+vendor.vendor_email for vendor in books_vendors",:class => "form-control"}
            %br
            .row
              .col-md-10
                .col-md-2
                  = label_tag "SUBJECT", nil, :class => "form-label"
                .col-md-10
                  = text_field_tag "",nil, :class => "form-control", :ng_model => "myMailSubject", :disabled => "disabled"
            %br
            .row
              .col-md-10
                .col-md-2
                  = label_tag "MESSAGE", nil, :class => "form-label"
                .col-md-10
                  = text_area_tag "",nil, :class => "form-control", :ng_model => "myMailMessage"                                   
              .col-md-2{"ng-controller" => "MailingController"}
                %button{:type => "button", :class=> "btn btn-primary", :ng_click => "requestBooksMail(myMailSubject,myMailMessage,myRequestBooks,myVendor); $parent.updateBooksStatus('Ordered')"}=  "SEND"
            %br
            .row
              %center
                %h4
                  Books Order Details
            .row
              %table#tblData.target.table.table-striped.table-condensed.table-bordered
                %thead      
                  %th Book Name
                  %th Author Name
                %tbody
                  %tr{"ng-repeat"=>"req in myRequestBooks"}
                    %td {{req.book_name}}
                    %td {{req.author_name}}
                
              
