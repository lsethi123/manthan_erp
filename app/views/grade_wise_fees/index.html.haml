.col-md-8{ "ng-controller" => "GradeWiseFeesController", "ng-init" => "getGridView()"}
  %table.table.table-bordered
    %thead
      %th
      %th{"ng-repeat" => "colHead in columnHeaders"}  
        %label{:class => "form-label"}
          {{colHead}}
      %th
        %label{:class => "form-label"}
          Total
    %tbody
      %tr{"ng-repeat" => "grd_wise_fee in gradeWiseFees"}
        %td
          %label{:class => "form-label"}
            {{rowHeaders[$index]}}
        %td{"ng-repeat" => "unit in grd_wise_fee"}
          {{gradeWiseFees[$parent.$index][$index]['amount_in_rupees']}}
        %td
          {{sumTotals[$index]}}
.row
  .col-md-2.col-md-offset-7
    = link_to "Edit", new_grade_wise_fee_path, :class => "btn btn-primary"
