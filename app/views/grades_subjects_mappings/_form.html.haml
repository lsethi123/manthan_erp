.row
  .row
    .col-md-1
    .col-md-4
      %h4{style: "font-weight: bold"} SELECT GRADES FOR SUBJECTS
    .col-md-4
      %input{:type => "button", :class => "btn btn-primary", "ng-click" => "saveGradesMappings()", :value => "DONE"}
    .col-md-3
     
  .row{"ng-repeat" => "subject in subjects_grades_all | orderBy:'subject_name'"}
    .col-md-1
    .col-md-9
      %h4{style: "font-weight: bold"} {{subject.subject_name}}
      .col-md-2{"ng-repeat" => "grade in subject.grades  | orderBy:'text'"}
        %input{"ng-model" => "grade.checked_value", type: "checkbox", "ng-change" => "addGrades({{!grade.checked_value}},{{subject.subject_master_id}},{{grade}})", "ng-checked" => "grade.checked_value"}      
        {{grade.text}}        
    .col-md-2
  
