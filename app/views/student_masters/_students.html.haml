%table.table.table-bordered.table-hover.table-striped
  %thead
    %th Name
    %th DOB
    %th Joining Date
    %th Father Name
    %th Grade
    %th Section
    %th Bus Facilty
  %tbody
    - students.each do |student|
      %tr
        %td= link_to student.name, student_master_path(:id => student,:context => context)
        %td= student.dob
        %td= student.joining_date
        %td
          - if student.parent.present?
            = student.parent.father_name
        %td
          - if student.grade_master.present?
            = student.grade_master.grade_name
        %td
          - if student.section_master.present?
            = student.section_master.section_name
        %td= student.bus_facility

