.row
  .row
    .col-md-1
    .col-md-4
      %h4{style: "font-weight: bold"} GRADES FOR ACTIVITIES
    .col-md-4
      %input{:type => "button", :class => "btn btn-primary", "ng-click" => "editGradesMappings()", :value => "EDIT"}
    .col-md-3 
  .row
    .col-md-1
    .col-md-9
      %table.target.table.table-striped.table-condensed.table-bordered
        %tr
          %th ACTIVITY
          %th GRADES         
        %tr{"ng-repeat" => "activity in activities | orderBy:'activity_name'"}
          %td {{activity.activity_name}} 
          %td
            .col-md-2{"ng-repeat" => "grade in show_grades |filter : {activity_master_id: activity.id} : true  | orderBy:'grade_name'"}        
              {{grade.grade_name}}         
    .col-md-2
          
      

   
