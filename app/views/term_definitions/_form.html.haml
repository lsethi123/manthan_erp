%form{:class=>"form-horizontal", :ng_submit => "submitTermDefinitions()"}
  .form-group{"ng-repeat" => "term_definition in newTermDefinitions"}
    = label_tag  "Term {{$index+1}}", nil, :class => "form-label col-md-2"
    .col-md-3   
      = text_field_tag  "bulk_term[][term_definition]",nil, :class => "form-control", :ng_model => "term_definition.term_definition", :placeholder => "Term Name"
    .col-sm-3
      = text_field_tag "bulk_term[][termdate]",nil, :class => 'datepicker form-control', :placeholder => "Term Date", :id => "date-{{$index}}", :ng_model => "term_definition.termdate"
    .col-md-3
      .input-group
        = text_field_tag "bulk_term[][amount_per]",nil, :class => "form-control" , :placeholder => "Amount Percent", :ng_model => "term_definition['amount_per']", :ng_model => "term_definition.amount_per"
        %span.input-group-addon %
     
  .row
    .col-md-5.col-md-offset-3
      %button{:type => "button", :class=> "btn btn-primary", :ng_click => "addMoreterms()"}=  "More terms"
      %button{:type=>"submit", :class=> "btn btn-primary"}=  "Save"
